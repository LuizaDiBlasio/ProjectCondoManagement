

@model CondoManagementWebApp.Models.RegisterUserViewModel
@{
    ViewData["Title"] = "Register User";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Define o layout a ser usado
}

<div class="fix-wrapper">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card mb-0 h-auto">
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <a href="@Url.Action("Index", "Home")"><img class="logo-auth" src="~/images/logo-full.png" alt="Logo"></a>
                        </div>
                        <h4 class="text-center mb-4">Register your account</h4>

                        <hr class="mt-4 mb-5" style="border-top: 1px solid #e0e0e0; opacity: 0.8;" />

                        <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>

                        <form asp-controller="Account" asp-action="RequestRegister" method="post" enctype="multipart/form-data">

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label class="form-label" asp-for="FullName"></label>
                                        <input asp-for="FullName" class="form-control" placeholder="Enter full name">
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mb-4">
                                        <label class="form-label" asp-for="Email"></label>
                                        <input asp-for="Email" class="form-control" placeholder="hello@example.com">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mb-4">
                                        <label class="form-label" asp-for="Address"></label>
                                        <input asp-for="Address" class="form-control" placeholder="Enter address">
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mb-4">
                                        <label class="form-label" asp-for="PhoneNumber"></label>
                                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number">
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div> <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label class="form-label" asp-for="BirthDate"></label>
                                        <input type="text" id="birthDateInput" asp-for="BirthDate" class="form-control" placeholder="Select a date" />
                                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mb-4">
                                        <label class="form-label" asp-for="SelectedRole">User role</label>
                                        <select asp-for="SelectedRole" asp-items="Model.AvailableRoles" class="form-control" id="SelectedRole"></select>
                                        <span asp-validation-for="SelectedRole" class="text-danger"></span>
                                    </div>
                                   
                                    <div id="radioButtonsContainer" class="form-group mb-4" style="display:none;">
                                        <label class="form-label">Company</label>
                                        <span asp-validation-for="SelectedCompanyId" class="text-danger"></span>
                                        <div>
                                            @foreach (var company in Model.AvailableCompanies)
                                            {
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio"
                                                           name="SelectedCompanyId"
                                                           id="@($"company_radio_{company.Value}")"
                                                           value="@company.Value"
                                                    @(company.Value == Model.SelectedCompanyId.ToString() ? "checked" : "") />
                                                    <label class="form-check-label" for="@($"company_radio_{company.Value}")">
                                                        @company.Text
                                                    </label>
                                                </div>
                                            }
                                        </div>
                                    </div>

                                    <div id="checkboxesContainer" class="form-group mb-4" style="display:none;">
                                        <label class="form-label">Companies</label>
                                        <span asp-validation-for="SelectedCompaniesIds" class="text-danger"></span>
                                        <div>
                                            @foreach (var company in Model.AvailableCompanies)
                                            {
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox"
                                                           name="SelectedCompaniesIds"
                                                           id="@($"company_checkbox_{company.Value}")"
                                                           value="@company.Value"
                                                    @(Model.SelectedCompaniesIds != null && Model.SelectedCompaniesIds.Contains(int.Parse(company.Value)) ? "checked" : "") />
                                                    <label class="form-check-label" for="@($"company_checkbox_{company.Value}")">
                                                        @company.Text
                                                    </label>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <div class="form-group mb-4">
                                        <label class="form-label" asp-for="ImageFile"></label>
                                        <input asp-for="ImageFile" class="form-control" type="file" />
                                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mt-3 d-flex justify-content-between align-items-center">
                                <a asp-action="SysAdminDashboard" asp-controller="Account" class="btn btn-outline-secondary">Back to DashBoard</a>
                                <button type="submit" class="btn btn-primary">Register User</button>
                            </div>
                            
                        </form>

                        <flash dismissable="true" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        // Aguarda o carregamento completo do documento HTML
        document.addEventListener('DOMContentLoaded', function () {

            // Lógica para o DatePicker (só executa se a biblioteca estiver disponível)
            if (typeof ej !== 'undefined' && ej.calendars && ej.calendars.DatePicker) {
                var birthDatePicker = new ej.calendars.DatePicker({
                    format: 'MM/dd/yyyy',
                    placeholder: 'Select a date',
                    max: new Date()
                });
                birthDatePicker.appendTo('#birthDateInput');
            } else {
                console.warn("A biblioteca Syncfusion DatePicker não foi carregada. O campo de data pode não funcionar corretamente.");
            }

            // Lógica para mostrar/esconder os campos de empresa
            var roleSelect = document.getElementById('SelectedRole');
            var radioContainer = document.getElementById('radioButtonsContainer');
            var checkboxContainer = document.getElementById('checkboxesContainer');

            function toggleCompanyFields() {
                var selectedRole = roleSelect.value;
                if (selectedRole === 'CompanyAdmin' || selectedRole === 'CondoManager') {
                    radioContainer.style.display = 'block';
                    checkboxContainer.style.display = 'none';
                } else if (selectedRole === 'CondoMember') {
                    radioContainer.style.display = 'none';
                    checkboxContainer.style.display = 'block';
                } else {
                    // Esconde ambos se a role for diferente das anteriores
                    radioContainer.style.display = 'none';
                    checkboxContainer.style.display = 'none';
                }
            }

            // Chama a função para definir o estado inicial dos campos
            toggleCompanyFields();

            // Adiciona um listener para o evento 'change'
            roleSelect.addEventListener('change', toggleCompanyFields);
        });
    </script>
}