@model CondoManagementWebApp.Models.AssignManagerViewModel
@{
    ViewData["Title"] = "Assign Manager";
}

<h1 class="mb-4">Assign Manager</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="AssignManager" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CompanyId" />
            <input type="hidden" asp-for="Address" />
            <input type="hidden" asp-for="CondoName" />




            <div class="mb-4">
                <h5>Condominium Info</h5>
                <p><strong>Name:</strong> @Model.CondoName</p>
                <p><strong>Address:</strong> @Model.Address</p>
            </div>

            <br />

            <div class="mb-3">
                <h5>Select Manager</h5>
                @if (Model.Managers != null && Model.Managers.Any())
                {
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 50px;"></th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var manager in Model.Managers)
                            {
                                <tr>
                                    <td>
                                        <input type="radio"
                                               name="ManagerUserId"
                                               value="@manager.Id"
                                               @(Model.ManagerUserId == manager.Id ? "checked" : "") />
                                    </td>
                                    <td>@manager.FullName</td>
                                    <td>@manager.Email</td>
                                    <td>@(manager.PhoneNumber ?? "N/A")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-warning">
                        No managers available. Please create manager accounts first.
                    </div>
                }
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success">Assign Manager</button>
                <a asp-action="Index" class="btn btn-outline-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}