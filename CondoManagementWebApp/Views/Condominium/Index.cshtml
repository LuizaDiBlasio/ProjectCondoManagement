@model IEnumerable<ClassLibrary.DtoModels.CondominiumDto>

@{
    ViewData["Title"] = "Condominiums";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        @* Título e Botão de Criação *@
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Condominiums</h4>
                </div>
            </div>
            @if (this.User.IsInRole("CompanyAdmin"))
            {
                <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                    <a class="btn btn-success" asp-action="Create">Create New Condominium</a>
                </div>
            }
        </div>

        @* Conteúdo da Tabela dentro de um Card *@
        <div class="row">
            <div class="col-xl-12 col-xxl-12">
                <div class="card">
                    <div class="card-body">
                        @if (Model == null || !Model.Any())
                        {
                            <div class="alert alert-info" role="alert">
                                No condominiums found.
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.CondoName)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Address)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ManagerUserId)
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CondoName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Address)
                                                </td>
                                                <td>
                                                    @if (item.ManagerUserId == null)
                                                    {
                                                        <span class="badge bg-danger">No Manager Assigned</span>
                                                    }
                                                    else
                                                    {
                                                        @Html.DisplayFor(modelItem => item.ManagerUser.FullName)
                                                    }
                                                </td>
                                                <td>
                                                    <a class="btn btn-outline-info me-2" asp-controller="Units" asp-action="Index" asp-route-id="@item.Id" asp-route-condoName="@item.CondoName">Units</a>

                                                    @if (this.User.IsInRole("CompanyAdmin"))
                                                    {
                                                        <a class="btn btn-outline-secondary me-2" asp-action="AssignManager" asp-route-id="@item.Id">Assign Manager</a>
                                                        <a class="btn btn-outline-primary me-2" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                                        <a class="btn btn-danger me-2" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                                    }

                                                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}