@model CondoManagementWebApp.Models.CreateEditCompanyViewModel

@{
    ViewData["Title"] = "Edit Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="fix-wrapper">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-6">
                <div class="card mb-0 h-auto">
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <a href="@Url.Action("Index", "Home")"><img class="logo-auth" src="~/images/logo-full.png" alt="Logo"></a>
                        </div>
                        <h4 class="text-center mb-4">Update Company</h4>

                        <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>

                        <form asp-controller="Company" asp-action="RequestEditCompany" method="post">
                            <div class="form-group mb-4">
                                <label class="form-label" asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" placeholder="Enter company name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label class="form-label" asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" placeholder="hello@example.com">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label class="form-label" asp-for="Address"></label>
                                <input asp-for="Address" class="form-control" placeholder="Enter address">
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label class="form-label" asp-for="PhoneNumber"></label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label class="form-label" asp-for="TaxIdDocument"></label>
                                <input asp-for="TaxIdDocument" class="form-control" placeholder="Enter tax ID number">
                                <span asp-validation-for="TaxIdDocument" class="text-danger"></span>
                            </div>

                            @* Dropdown para o Company Admin *@
                            <div class="form-group mb-4">
                                <label asp-for="SelectedCompanyAdminId" class="form-label"></label>
                                <select asp-for="SelectedCompanyAdminId" asp-items="Model.CompanyAdminsToSelect" class="form-control">
                                    @if (Model.CompanyAdminsToSelect != null && Model.CompanyAdminsToSelect.Any())
                                    {
                                            <option value="">-- Select Company Admin --</option>
                                    }
                                    else
                                    {
                                            <option value="">-- No Company Admins available --</option>
                                    }

                                </select>
                                <span asp-validation-for="SelectedCompanyAdminId" class="text-danger"></span>
                            </div>

                            @* Múltipla seleção para os Condomínios (checklist) *@
                            <div class="form-group mb-4">
                                <label asp-for="SelectedCondominiumIds" class="control-label"></label>
                                <div class="border p-3 rounded" style="max-height: 200px; overflow-y: auto;">
                                    @if (Model.CondominiumsToSelect != null && Model.CondominiumsToSelect.Any())
                                    {
                                        @foreach (var condoItem in Model.CondominiumsToSelect) // Iterar a SelectListItem
                                        {
                                                    <div class="form-check">
                                                        <input type="checkbox"
                                                               name="SelectedSubjectIds"
                                                               value="@condoItem.Value" @*Id do condo*@
                                                               id="subject_@condoItem.Value" @*Id do condo na checklist*@
                                                               class="form-check-input"

                                                @*Marcar check ou vazio na checkbox se algum condo foi selecionada ou não*@
                                                @(Model.SelectedCondominiumIds != null && Model.SelectedCondominiumIds.Contains(int.Parse(condoItem.Value)) ? "checked" : "") />
                                                        <label class="form-check-label" for="subject_@condoItem.Value">
                                                    @condoItem.Text
                                                        </label>
                                                    </div>
                                        }
                                    }
                                    else
                                    {
                                            <p>No condos available to select.</p>
                                    }
                                </div>
                                <span asp-validation-for="SelectedCondominiumIds" class="text-danger"></span>
                            </div>


                            <div class="form-group mt-3 d-flex justify-content-between align-items-center">
                                <button type="submit" class="btn btn-primary">Create Company</button>
                                <a asp-action="SysAdminDashboard" asp-controller="Account" class="btn btn-outline-secondary">Back to DashBoard</a>
                            </div>
                        </form>

                        <flash dismissable="true" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}