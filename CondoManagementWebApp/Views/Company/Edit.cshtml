@model CondoManagementWebApp.Models.CreateEditCompanyViewModel

@{
	ViewData["Title"] = "Edit Company";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-body">
	<div class="container-fluid">
		@* Título e Breadcrumbs *@
		<div class="row page-titles mx-0">
			<div class="col-sm-6 p-md-0">
				<div class="welcome-text">
					<h4>Update Company</h4>
				</div>
			</div>
			<div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
					<li class="breadcrumb-item"><a asp-action="IndexCompanies">Companies</a></li>
					<li class="breadcrumb-item active"><a href="javascript:void(0)">Edit</a></li>
				</ol>
			</div>
		</div>

		@* Formulário de Edição dentro de um Card *@
		<div class="row">
			<div class="col-xl-12 col-xxl-12">
				<div class="card">
					<div class="card-header">
						<h4 class="card-title">Company Information</h4>
					</div>
					<div class="card-body">
						<div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
						<form asp-controller="Company" asp-action="RequestEdit" method="post">
							<input type="hidden" asp-for="Id" />
							<input type="hidden" asp-for="FinancialAccountId" />
							@* Campos em duas colunas *@
							<div class="row">
								<div class="col-md-6 mb-3">
									<label class="form-label font-weight-bold" asp-for="Name"></label>
									<input asp-for="Name" class="form-control" placeholder="Enter company name">
									<span asp-validation-for="Name" class="text-danger"></span>
								</div>
								<div class="col-md-6 mb-3">
									<label class="form-label font-weight-bold" asp-for="Email"></label>
									<input asp-for="Email" class="form-control" placeholder="hello@example.com">
									<span asp-validation-for="Email" class="text-danger"></span>
								</div>
								<div class="col-md-6 mb-3">
									<label class="form-label font-weight-bold" asp-for="Address"></label>
									<input asp-for="Address" class="form-control" placeholder="Enter address">
									<span asp-validation-for="Address" class="text-danger"></span>
								</div>
								
							</div>

							<div class="row">
								<div class="col-12">
									<div class="form-group mb-4">
										<label class="form-label font-weight-bold" asp-for="PhoneNumber"></label>
										<input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number">
										<span asp-validation-for="PhoneNumber" class="text-danger"></span>
									</div>
									<div class="form-group mb-4">
										<label class="form-label font-weight-bold" asp-for="TaxIdDocument"></label>
										<input asp-for="TaxIdDocument" class="form-control" placeholder="Enter tax ID number">
										<span asp-validation-for="TaxIdDocument" class="text-danger"></span>
									</div>
									
								</div>
							</div>

							
								<flash dismissable="true" />
								<div class="form-group mt-4 text-center">
									<button type="submit" class="btn btn-primary">Update Company</button>
								</div>
						</form>
						
					</div>
				</div>
			</div>
		</div>

		@* Botão de voltar, fora do card *@
		<div class="d-flex justify-content-start mt-3">
			<a asp-action="IndexCompanies" class="btn btn-outline-secondary">Back to List</a>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}