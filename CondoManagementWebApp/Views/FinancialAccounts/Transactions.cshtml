@model IEnumerable<ClassLibrary.DtoModels.TransactionDto>

@{
    ViewData["Title"] = "Transactions";
}

<h1 class="mb-4">Transactions</h1>

<table class="table table-hover table-bordered shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Recipient</th>
        </tr>
    </thead>
    <tbody>
        <a asp-action="Details" asp-route-email="@ViewBag.Email" asp-route-id="@ViewBag.AccountId" class="btn btn-outline-primary">Back to Account</a>
        @foreach (var item in Model)
        {
            var isMyAccount = item.BeneficiaryAccountId == (int?)ViewBag.AccountId;
            var amountClass = isMyAccount ? "text-success" : "text-danger";

            <tr>
                <td>@item.DateAndTime.ToString("dd/MM/yyyy HH:mm")</td>

                <td class="fw-bold @amountClass">
                    @(item.Amount.HasValue? item.Amount.Value.ToString("C") : "—")
                </td>

                <td>@(item.ExternalRecipientBankAccount ?? "—")</td>
            </tr>
           
        }
    </tbody>
</table>