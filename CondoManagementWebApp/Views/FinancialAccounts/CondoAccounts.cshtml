@model IEnumerable<ClassLibrary.DtoModels.FinancialAccountDto>

@{
    ViewData["Title"] = "CondoAccounts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        @* Título (Adaptados para esta View) *@
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Condominium Accounts</h4>
                </div>
            </div>
        </div>

        @* Conteúdo da Tabela dentro de um Card *@
        <div class="row">
            <div class="col-xl-12 col-xxl-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Accounts List</h4>
                    </div>
                    <div class="card-body">
                        @if (Model == null || !Model.Any())
                        {
                            <p>No condominium accounts found.</p>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.OwnerName)
                                            </th>
                                            <th>
                                                Account Status
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.OwnerName)
                                                </td>
                                                <td>
                                                    @if (item.IsActive == true)
                                                    {
                                                        <span class="badge bg-success">Active</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">Inactive</span>
                                                    }
                                                </td>
                                                <td>
                                                    <a class="btn btn-primary me-2" asp-action="Edit" asp-route-id="@item.Id" asp-route-email="@ViewBag.Email" asp-route-returnUrl="CondoAccounts">Edit</a>
                                                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id" asp-route-email="@ViewBag.Email">Account</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}