@model CondoManagementWebApp.Models.DepositViewModel

@{
    ViewData["Title"] = "Withdrawal";
}

<h1>Withdrawal</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Withdrawal" asp-route-id="@Model.OwnerId" asp-route-email="@ViewBag.Email">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <input type="hidden" asp-for="OwnerId" />
            <input type="hidden" asp-for="SelectedPaymentMethodId" value="3" />

   
            <div class="form-group">
                <label asp-for="DepositValue" class="control-label">Withdrawal Amount</label>
                <input asp-for="DepositValue" class="form-control" />
                <span asp-validation-for="DepositValue" class="text-danger"></span>
            </div>

        
            <div class="alert alert-info mt-3">
                Withdrawals are only available through your <strong>Associated Bank Account</strong>.
            </div>

      
            <div class="form-group mt-3">
                <input type="submit" value="Withdrawal" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.OwnerId" asp-route-email="@ViewBag.Email" class="btn btn-secondary">
                    Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}