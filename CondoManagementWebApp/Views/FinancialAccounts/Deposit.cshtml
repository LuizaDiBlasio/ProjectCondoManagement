@model CondoManagementWebApp.Models.DepositViewModel

@{
    ViewData["Title"] = "Deposit";
}

<h1>Deposit</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Deposit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <input type="hidden" asp-for="OwnerId" />


            <div class="form-group">
                <label asp-for="DepositValue" class="control-label"></label>
                <input asp-for="DepositValue" class="form-control" />
                <span asp-validation-for="DepositValue" class="text-danger"></span>
            </div>

 
            <div class="form-group">
                <label>Payment Method</label><br />
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="SelectedPaymentMethodId" value="1" id="pmMbWay" />
                    <label class="form-check-label" for="pmMbWay">MB Way</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="SelectedPaymentMethodId" value="2" id="pmCreditCard" />
                    <label class="form-check-label" for="pmCreditCard">Credit Card</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="SelectedPaymentMethodId" value="3" id="pmBank" />
                    <label class="form-check-label" for="pmBank">Associated Bank Account</label>
                </div>
                <span asp-validation-for="SelectedPaymentMethodId" class="text-danger"></span>
            </div>


            <div id="mbWayFields" style="display:none;">
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div id="creditCardFields" style="display:none;">
                <div class="form-group">
                    <label asp-for="CreditCardNumber" class="control-label"></label>
                    <input asp-for="CreditCardNumber" class="form-control" />
                    <span asp-validation-for="CreditCardNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cvv" class="control-label"></label>
                    <input asp-for="Cvv" class="form-control" />
                    <span asp-validation-for="Cvv" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Deposit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>

        function togglePaymentFields() {
            let selected = document.querySelector('input[name="SelectedPaymentMethodId"]:checked')?.value;
            document.getElementById("mbWayFields").style.display = (selected === "1") ? "block" : "none";
            document.getElementById("creditCardFields").style.display = (selected === "2") ? "block" : "none";
        }

        document.querySelectorAll('input[name="SelectedPaymentMethodId"]').forEach(radio => {
            radio.addEventListener('change', togglePaymentFields);
        });


        togglePaymentFields();
    </script>
}