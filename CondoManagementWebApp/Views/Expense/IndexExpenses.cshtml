@model CondoManagementWebApp.Models.IndexExpensesViewModel;

@{
    ViewData["Title"] = "Condominium Expenses";
}

<div class="d-flex justify-content-between align-items-center mb-3">

    @if(Model.CondominiumName != null)
    {
        <h1>@Model.CondominiumName Expenses</h1>
    }
    else
    {
        <h2>You are not managing any condominiums currently</h2>
    }

    <div>
        <a asp-controller="Expense" asp-action="CreateExpense" class="btn btn-primary">New</a>
    </div>
</div>

@if (Model.ExpensesDto != null && Model.ExpensesDto.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Expense type
                </th>
                <th>
                    Detail
                </th>
                <th>
                    Amount
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ExpensesDto)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpenseTypeDto.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Detail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        <a asp-action="EditExpense" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Edit</a>
                        <a href="#" class="btn btn-danger btn-sm delete-btn" data-bs-toggle="modal" data-bs-target="#deleteDialog" data-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No expenses found.</p>
}

<div id="deleteDialog" class="modal fade">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Expense</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this expense?</p>
                <form id="deleteForm" method="post" asp-action="RequestDelete">
                    <input type="hidden" id="expenseIdToDelete" name="id" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-danger" form="deleteForm">Delete</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('a[data-bs-target="#deleteDialog"]').click(function () {
                var id = $(this).data('id');
                $('#expenseIdToDelete').val(id);
            });
        });
    </script>
}