                @model CondoManagementWebApp.Models.CreateEditExpenseViewModel

@{
    ViewData["Title"] = "Create Expense";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-xl-8 col-xxl-8">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center w-100">
                            <h4 class="card-title welcome-text mb-0">Enter Expense</h4>
                        </div>
                    </div>

                    <div class="card-body">
                        <form asp-action="RequestCreateExpense">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <input type="hidden" asp-for="Id" />

                            <div class="form-group mb-3">
                                <label asp-for="Amount" class="control-label"></label>
                                <input asp-for="Amount" class="form-control" placeholder="Enter amount" />
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Detail" class="control-label"></label>
                                <input asp-for="Detail" class="form-control" placeholder="Enter details" />
                                <span asp-validation-for="Detail" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="ExpenseTypeDto" class="form-label font-weight-bold text-purple">Expense Type</label>
                                <select asp-for="ExpenseTypeDto.Value" asp-items="Model.ExpenseTypeDtoList"  class="form-control" style="width: auto;">
                                    <option value="">-- Select Expense Type --</option>
                                </select>
                            </div>

                            <div class="d-flex justify-content-between mt-3">
                                <a asp-action="IndexExpenses" class="btn btn-secondary">Back to List</a>
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <style>
        .text-purple {
            color: #8A2BE2 !important;
        }
        /* Garantindo que a seta apareça, usando o seletor mais específico */
        .form-control {
            -webkit-appearance: menulist;
            -moz-appearance: menulist;
            appearance: menulist;
        }
        /* Ajustando a cor do texto do select para ser legível */
        select.form-control option {
            color: black;
        }
    </style>
}