@model IEnumerable<ClassLibrary.DtoModels.UnitDto>

@{
    ViewData["Title"] = "MemberUnits";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        @* Título e Breadcrumbs *@
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>@ViewBag.MemberName's Units</h4>
                </div>
            </div>
        </div>

        @* Conteúdo da Tabela dentro de um Card *@
        <div class="row">
            <div class="col-xl-12 col-xxl-12">
                <div class="card">
                    <div class="card-header">
                        @if (!this.User.IsInRole("CondoMember"))
                        {
                            <div class="d-flex justify-content-end">
                                @if (this.User.IsInRole("CondoManager"))
                                {
                                    <a asp-action="Create" class="btn btn-success me-2" asp-route-memberId="@ViewBag.MemberId">Add Unit</a>
                                }
                                <a asp-controller="CondoMember" asp-action="Index" class="btn btn-outline-primary">Back to Condo Members</a>
                            </div>
                        }
                    </div>
                    <div class="card-body">
                        @if (Model == null || !Model.Any())
                        {
                            <p>No units found.</p>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.CondominiumDto)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Floor)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Door)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Bedrooms)
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CondominiumDto.CondoName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Floor)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Door)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Bedrooms)
                                                </td>
                                                <td>
                                                    @if (this.User.IsInRole("CondoManager"))
                                                    {
                                                        <a class="btn btn-outline-primary me-2" asp-action="Edit" asp-route-id="@item.Id" asp-route-memberId="@ViewBag.MemberId">Edit</a>
                                                    }
                                                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id" asp-route-memberId="@ViewBag.MemberId">Details</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}