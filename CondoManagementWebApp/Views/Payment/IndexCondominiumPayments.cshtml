@model IEnumerable<ClassLibrary.DtoModels.PaymentDto>

@{
    ViewData["Title"] = "Condominium Payments";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Condominium Payments</h4>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Condominium Payments</a></li>
                </ol>
            </div>
        </div>

        @if (!Model.Any())
        {
            <p>No payments found.</p>
        }
        else
        {
            <div class="row">
                <div class="col-xl-12 col-xxl-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Payments List</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>@Html.DisplayNameFor(model => model.Id)</th>
                                            <th>@Html.DisplayNameFor(model => model.IssueDate)</th>
                                            <th>@Html.DisplayNameFor(model => model.DueDate)</th>
                                            <th>Payment date</th>
                                            <th>@Html.DisplayNameFor(model => model.TotalAmount)</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                                <td>@Html.DisplayFor(modelItem => item.IssueDate)</td>
                                                <td>@Html.DisplayFor(modelItem => item.DueDate)</td>
                                                <td>
                                                    @if (!item.IsPaid)
                                                    {
                                                        <span>Not paid</span>
                                                    }
                                                    else
                                                    {
                                                        <span> @item.TransactionDto.DateAndTime </span>
                                                    }
                                                </td>
                                                <td>@Html.DisplayFor(modelItem => item.TotalAmount)</td>
                                                <td>
                                                    @if (!item.IsPaid)
                                                    {
                                                        @Html.ActionLink("Pay", "MakePayment", new { id = item.Id }, new { @class = "btn btn-primary" })
                                                    }
                                           
                                                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-outline-info ms-2" })
                                                    <a href="#" class="btn btn-outline-danger ms-2 delete-btn" data-bs-toggle="modal" data-bs-target="#deleteDialog" data-id="@item.Id">Cancel Payment</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="row mt-4">
            <div class="col-xl-12 col-xxl-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4 class="card-title mb-0">Schedule Payments</h4>
                        <div class="d-flex">
                            <a asp-action="CreateOneTimePayment" class="btn btn-primary me-2">One Time Payment</a>
                            <a asp-action="CreateRecurrentPayment" class="btn btn-info">Recurrent Payment</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="deleteDialog" class="modal fade">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cancel Payment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to cancel this payment?</p>
                <form id="deleteForm" method="post" asp-action="RequestDelete">
                    <input type="hidden" id="paymentIdToDelete" name="id" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">No</button>
                <button type="submit" class="btn btn-danger" form="deleteForm">Yes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('a[data-bs-target="#deleteDialog"]').click(function () {
                var id = $(this).data('id');
                $('#paymentIdToDelete').val(id);
            });
        });
    </script>
}
