@model IEnumerable<ClassLibrary.DtoModels.PaymentDto>

@{
    ViewData["Title"] = "Condominium Payments";
}

<div class="row page-titles mx-0 d-flex align-items-center">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>Condominium Payments</h4>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 text-sm-end mt-2 mt-sm-0">
        <a asp-controller="Payment" asp-action="IndexAllCondoMembersPayments" class="btn btn-primary me-2">Member's payments</a>
        <a asp-controller="Payment" asp-action="CreateOneTimePayment" class="btn btn-outline-primary me-2">Schedule </a>
    </div>
</div>

@if (!Model.Any())
{
    <p class="mt-4">No payments found.</p>
}
else
{
    <div class="card mt-4">
        
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Id)</th>
                            <th>@Html.DisplayNameFor(model => model.DueDate)</th>
                            <th>Payment date</th>
                            <th>@Html.DisplayNameFor(model => model.TotalAmount)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@item.DueDate.ToShortDateString()</td>
                                <td>
                                    @if (!item.IsPaid)
                                    {
                                        <span class="text-danger">Not paid</span>
                                    }
                                    else
                                    {
                                        <span> @item.TransactionDto.DateAndTime.ToShortDateString() </span>
                                    }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.TotalAmount)</td>
                                <td>
                                    @if (!item.IsPaid)
                                    {
                                        @Html.ActionLink("Pay", "MakePayment", new { id = item.Id }, new { @class = "btn btn-primary" })
                                    }
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-outline-info ms-2" })
                                    <a href="#" class="btn btn-outline-danger ms-2 delete-btn" data-bs-toggle="modal" data-bs-target="#deleteDialog" data-id="@item.Id">Cancel Payment</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<div id="deleteDialog" class="modal fade">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cancel Payment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to cancel this payment?</p>
                <form id="deleteForm" method="post" asp-action="RequestDelete">
                    <input type="hidden" id="paymentIdToDelete" name="id" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">No</button>
                <button type="submit" class="btn btn-danger" form="deleteForm">Yes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('a[data-bs-target="#deleteDialog"]').click(function () {
                var id = $(this).data('id');
                $('#paymentIdToDelete').val(id);
            });
        });
    </script>
}