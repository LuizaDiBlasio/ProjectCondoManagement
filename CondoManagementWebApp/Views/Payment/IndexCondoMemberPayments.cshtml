@model IEnumerable<ClassLibrary.DtoModels.PaymentDto>

@{
    ViewData["Title"] = "My Payments";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>My Payments</h4>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">My Payments</a></li>
                </ol>
            </div>
        </div>

        @if (!Model.Any())
        {
            <p>No payments found.</p>
        }
        else
        {
            <div class="row">
                <div class="col-xl-12 col-xxl-12">
                    <div class="card">
                        
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Due Date</th>
                                            <th>Payment Date</th>
                                            <th>Recipient</th>
                                            <th>Payer</th>
                                            <th>Total Amount</th>
                                            <th>Expense</th>
                                            <th>Actions</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.DueDate.ToShortDateString()</td>
                                                
                                                <td>
                                                    @if (!item.IsPaid)
                                                    {
                                                        <span> Not paid</span>
                                                    }
                                                    else
                                                    {
                                                        <span>@item.TransactionDto.DateAndTime.ToShortDateString()</span>
                                                    }
                                                </td>
                                               
                                                 
                                                <td>@item.Recipient</td>
                                                <td>@item.Payer</td>
                                                <td>@Html.DisplayFor(modelItem => item.TotalAmount)</td>
                                                <td>@item.ExpenseType</td>
                                       
                                                <td>
                                                    @if (!item.IsPaid)
                                                    {
                                                        @Html.ActionLink("Pay", "MakePayment", new { id = item.Id }, new { @class = "btn btn-primary" })
                                                    }
                                                </td>

                                               
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>