@model CondoManagementWebApp.Models.MakePaymentViewModel

@{
    ViewData["Title"] = "Make Payment";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-xl-8 col-xxl-8">

                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center w-100">
                            <h4 class="card-title welcome-text mb-0">Make Payment</h4>
                        </div>
                    </div>

                    <div class="card-body">

                        <!-- 🔹 Payment Information Section -->
                        <h5 class="mb-3">Payment Information</h5>
                        <dl class="row mb-4">
                            <dt class="col-sm-4">Recipient</dt>
                            <dd class="col-sm-8">@Model.Payment?.Recipient</dd>

                            <dt class="col-sm-4">Payer</dt>
                            <dd class="col-sm-8">@Model.Payment?.Payer</dd>

                            <dt class="col-sm-4">Amount</dt>
                            <dd class="col-sm-8">@Model.Payment?.Amount?.ToString("C2")</dd>

                            <dt class="col-sm-4">Expense Type</dt>
                            <dd class="col-sm-8">@Model.Payment?.ExpenseType</dd>

                            <dt class="col-sm-4">Due Date</dt>
                            <dd class="col-sm-8">@Model.Payment?.DueDate.ToString("dd/MM/yyyy")</dd>
                        </dl>

                        <hr />

                        <!-- 🔹 Payment Form -->
                        <form asp-action="RequestMakePayment">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="IsPaid" />

                            <!-- Payment Method -->
                            <div class="form-group mb-3">
                                <label class="form-label font-weight-bold text-purple">Payment method</label><br />
                                @if (Model.PaymentMethods != null)
                                {
                                    @foreach (var method in Model.PaymentMethods)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio"
                                                   asp-for="SelectedPaymentMethodId"
                                                   value="@method.Value"
                                                   id="pm-@method.Value" />
                                            <label class="form-check-label" for="pm-@method.Value">@method.Text</label>
                                        </div>
                                    }
                                }
                                <span asp-validation-for="SelectedPaymentMethodId" class="text-danger"></span>
                            </div>

                            <!-- MbWay Fields -->
                            <div id="mbwayFields" style="display:none;">
                                <div class="form-group mb-3">
                                    <label asp-for="PhoneNumber" class="control-label"></label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Credit Card Fields -->
                            <div id="creditCardFields" style="display:none;">
                                <div class="form-group mb-3">
                                    <label asp-for="CreditCardNumber" class="control-label"></label>
                                    <input asp-for="CreditCardNumber" class="form-control" />
                                    <span asp-validation-for="CreditCardNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Cvv" class="control-label"></label>
                                    <input asp-for="Cvv" class="form-control" />
                                    <span asp-validation-for="Cvv" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Hidden Fields -->
                            <input type="hidden" asp-for="PayerFinancialAccountId" />
                            <input type="hidden" asp-for="BeneficiaryAccountId" value="@ViewBag.AccountId" />

                            <!-- Actions -->
                            <div class="d-flex justify-content-between mt-3">
                                @if (this.User.IsInRole("CondoManager"))
                                {
                                    <a asp-controller="Payment" asp-action="IndexCondominiumPayments" class="btn btn-secondary">Back to List</a>
                                }
                                else if (this.User.IsInRole("CondoMember"))
                                {
                                    <a asp-controller="Payment" asp-action="IndexCondoMemberPayments" class="btn btn-secondary">Back to List</a>
                                }
                                <input type="submit" value="Pay" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function togglePaymentFields() {
            let selected = document.querySelector('input[name="SelectedPaymentMethodId"]:checked')?.value;
            document.getElementById("mbwayFields").style.display = (selected === "1") ? "block" : "none";
            document.getElementById("creditCardFields").style.display = (selected === "2") ? "block" : "none";
        }

        document.querySelectorAll('input[name="SelectedPaymentMethodId"]').forEach(radio => {
            radio.addEventListener('change', togglePaymentFields);
        });

        togglePaymentFields();
    </script>
}
