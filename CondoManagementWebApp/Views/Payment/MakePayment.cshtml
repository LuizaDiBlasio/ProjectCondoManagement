@model CondoManagementWebApp.Models.MakePaymentViewModel

@{
    ViewData["Title"] = "Make Payment";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-xl-8 col-xxl-8">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center w-100">
                            <h4 class="card-title welcome-text mb-0">Make Payment</h4>
                        </div>
                    </div>

                    <div class="card-body">
                        <form asp-action="RequestMakePayment">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="IsPaid" />

                            @*escolher o método de pagamento*@
                            <div class="form-group mb-3">
                                <label class="form-label font-weight-bold text-purple">Payment method</label><br />
                                @if (Model.PaymentMethods != null)
                                {
                                    @foreach (var method in Model.PaymentMethods)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input payment-method-radio" type="radio"
                                            asp-for="SelectedPaymentMethodId"
                                            value="@method.Value"
                                            id="pm-@method.Value" />
                                            <label class="form-check-label" for="pm-@method.Value">@method.Text</label>
                                        </div>
                                    }
                                }
                                <span asp-validation-for="SelectedPaymentMethodId" class="text-danger"></span>
                            </div>

                            @*uma dessas opções aparecem depois de escolher o método de pagamento*@
                            <div id="payerAccountFields" style="display:none;">
                                <div class="form-group mb-3">
                                    <label asp-for="PayerFinancialAccountId" class="control-label"></label>
                                    <input asp-for="PayerFinancialAccountId" class="form-control" />
                                    <span asp-validation-for="PayerFinancialAccountId" class="text-danger"></span>
                                </div>
                            </div>

                            <div id="creditCardFields" style="display:none;">
                                <div class="form-group mb-3">
                                    <label asp-for="CreditCardNumber" class="control-label"></label>
                                    <input asp-for="CreditCardNumber" class="form-control" />
                                    <span asp-validation-for="CreditCardNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Cvv" class="control-label"></label>
                                    <input asp-for="Cvv" class="form-control" />
                                    <span asp-validation-for="Cvv" class="text-danger"></span>
                                </div>
                            </div>

                            <div id="mbwayFields" style="display:none;">
                                <div class="form-group mb-3">
                                    <label asp-for="PhoneNumber" class="control-label"></label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>

                            @*Escolher o tipo de recipiente*@
                            <div class="form-group mb-3">
                                <label class="form-label font-weight-bold text-purple">Recipient</label><br />
                                @if (Model.BeneficiaryTypeList != null)
                                {
                                    @foreach (var beneficiary in Model.BeneficiaryTypeList)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input beneficiary-type-radio" type="radio"
                                            asp-for="SelectedBeneficiaryId"
                                            value="@beneficiary.Value"
                                            id="ben-@beneficiary.Value" />
                                            <label class="form-check-label" for="ben-@beneficiary.Value">@beneficiary.Text</label>
                                        </div>
                                    }
                                }
                                <span asp-validation-for="SelectedBeneficiaryId" class="text-danger"></span>
                            </div>

                            @*uma dessas opções aparece depois de escolher o tipo de recipiente*@

                            <div id="beneficiaryAccountIdFields" style="display:none;">
                                <div class="form-group mb-3">
                                    <label asp-for="BeneficiaryAccountId" class="control-label"></label>
                                    <input asp-for="BeneficiaryAccountId" class="form-control" />
                                    <span asp-validation-for="BeneficiaryAccountId" class="text-danger"></span>
                                </div>
                            </div>

                            <div id="externalRecipientFields" style="display:none;">
                                <div class="form-group mb-3">
                                    <label asp-for="ExternalRecipientBankAccount" class="control-label"></label>
                                    <input asp-for="ExternalRecipientBankAccount" class="form-control" />
                                    <span asp-validation-for="ExternalRecipientBankAccount" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between mt-3">
                                @if (this.User.IsInRole("CondoManager"))
                                {
                                    <a asp-controller="Payment" asp-action="IndexCondominiumPayments" class="btn btn-secondary">Back to List</a>
                                }
                                else if (this.User.IsInRole("CondoMember"))
                                {
                                    <a asp-controller="Payment" asp-action="IndexCondoMemberPayments" class="btn btn-secondary">Back to List</a>
                                }
                                <input type="submit" value="Pay" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Lógica para o método de pagamento
                   $('.payment-method-radio').on('change', function () {
            var selectedValue = $(this).val();

            // Oculta todos os campos primeiro
            $('#creditCardFields').hide();
            $('#mbwayFields').hide();
            $('#payerAccountFields').hide();

            // Mostra o campo correspondente ao valor selecionado
            if (selectedValue === "2") { // ID para Cartão de Crédito
                $('#creditCardFields').show();
            } else if (selectedValue === "1") { // ID para MbWay
                $('#mbwayFields').show();
            } else if (selectedValue === "3") { // ID para Omah Wallet
                $('#payerAccountFields').show();
            }
        });

            // Lógica para o tipo de beneficiário
                         $('.beneficiary-type-radio').on('change', function () {
            var selectedValue = $(this).val();

            // Oculta todos os campos de beneficiário primeiro
            $('#beneficiaryAccountIdFields').hide();
            $('#externalRecipientFields').hide();

            // Mostra o campo correspondente ao valor selecionado
            if (selectedValue === "1" || selectedValue === "2") {
                $('#beneficiaryAccountIdFields').show();
            } else if (selectedValue === "3") {
                $('#externalRecipientFields').show();
            }
        });
        });
    </script>
}