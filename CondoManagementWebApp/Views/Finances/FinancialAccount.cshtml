@model CondoManagementWebApp.Models.FinancialAccountViewModel
@{
    ViewData["Title"] = "FinancialAccount";
}

<h1>Financial Account</h1>

<div class="row">
	<div class="col-xl-3 col-lg-6 col-sm-6">
		<div class="widget-stat card bg-danger ">
			<div class="card-body p-4">
				<div class="media">
					<span class="me-3">
						<i class="la la-dollar"></i>
					</span>
					<div class="media-body text-white">
						<p class="mb-1">Account Balance</p>
						<h3 class="text-white">@Model.Balance€</h3>
						<small>
							@if(Model.Company != null)
							{
								<p>@Model.Company.Name</p>
							}
							else
							{
								<p>@Model.User.FullName</p>
							}
						</small>
					</div>
				</div>
			</div>
		</div>
	</div>
	<a class="col-xl-3 col-lg-6 col-sm-6" href="#transaction-list">
		<div class="widget-stat card bg-primary">
			<div class="card-body p-4">
				<div class="media">
					<span class="me-3">
						<i class="flaticon-381-controls-3"></i>
					</span>
					<div class="media-body text-white text-end">
						<p class="mb-1">Transactions</p>
						<h3 class="text-white">0</h3>
					</div>
				</div>
			</div>
		</div>
	</a>
</div>



<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col">
                    <h4 class="card-title">Transactions</h4>
                </div>
                <div class="col">
                    <button type="button" class="btn btn-rounded btn-info">
                        <span class="btn-icon-start text-info">
                            <i class="fa fa-plus color-info"></i>
                        </span>New
                    </button>
                </div>   
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-responsive-sm">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Beneficiant</th>
                            <th>Payer</th>
                            <th>Date</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var transaction in Model.Transactions)
                        {
                            <tr>
                                <th>@transaction.Id</th>
                                <td>@transaction.AccountBeneficiary.BankName</td>
                                <td>
                                    <span>@transaction.AccountPayer.BankName</span>
                                </td>
                                <td>@transaction.DateAndTime</td>
                                <td class="color-primary">@transaction.Amount€</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>