@model ClassLibrary.DtoModels.OccurrenceDto

@{
    ViewData["Title"] = "DetailsOccurrence";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Occurrence Details</h4>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <a asp-action="IndexOccurrences" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-12 col-xxl-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Occurrence Information</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12 mb-4">
                                <dl class="row">
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.Id)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.Id)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.Subject)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.Subject)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.Details)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.Details)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.DateAndTime)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Model.DateAndTime.ToShortDateString()
                                    </dd>

                                    @if (Model.IsResolved)
                                    {
                                        <dt class="col-sm-3">
                                            @Html.DisplayNameFor(model => model.ResolutionDate)
                                        </dt>
                                        <dd class="col-sm-9">
                                            @Model.ResolutionDate?.ToShortDateString()
                                        </dd>
                                    }
                                    <dt class="col-sm-3">
                                        Status
                                    </dt>
                                    <dd class="col-sm-9">
                                        @if (Model.IsResolved)
                                        {
                                            <span class="badge bg-success fs-6">Resolved</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark fs-6">Unresolved</span>
                                        }
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-12 col-xxl-12 mt-4">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Associated Expense</h4>
                </div>
                <div class="card-body">
                    @if (!Model.UnitDtos.Any())
                    {
                        <p>No units associated with this occurrence.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Floor</th>
                                        <th>Door</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.UnitDtos)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Floor)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Door)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="mt-4">
            @if (User.IsInRole("CondoManager"))
            {
                @Html.ActionLink("Edit", "EditOccurrence", new { id = Model.Id }, new { @class = "btn btn-info me-2" }) 
            }
            <a asp-action="IndexOccurrences" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
</div>
<hr>

