@model IEnumerable<ClassLibrary.DtoModels.CondoMemberDto>
@{
    ViewData["Title"] = "Index";
}

<h1>Condo Members</h1>
<br />

@if(this.User.IsInRole("CondoManager"))
{
<p>
    <a class="btn btn-success" asp-action="Create">Create new member</a>
</p>
}


<br />
@if (Model == null || !Model.Any())
{
    <p>No condo members found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th></th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Birth Date</th>
                <th>Phone Number</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@(item.ImageFullPath)" alt="User Image" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                    </td>
                    <td>@item.FullName</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.BirthDate?.ToString("MM/dd/yyyy")</td>
                    <td>@item.PhoneNumber</td>
                    <td>
                        <a class="btn btn-outline-secondary" asp-controller="Units" asp-action="MemberUnits" asp-route-id="@item.Id">Units</a>

                        @if (this.User.IsInRole("CondoManager"))
                        {
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }

                        <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

