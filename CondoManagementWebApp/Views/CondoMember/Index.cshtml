@model IEnumerable<ClassLibrary.DtoModels.CondoMemberDto>
@{
    ViewData["Title"] = "Index";
}

<h1>Condo Members</h1>
<br />

<p>
    <a class="btn btn-success" asp-action="Create">Create new member</a>
</p>

<br />
<table class="table table-striped">
    <thead>
        <tr>
            <th></th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Birth Date</th>
            <th>Phone Number</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImageFullPath" alt="Member Image" class="img-fluid rounded border shadow" style="max-height: 100px;" />
                </td>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.Address</td>
                <td>@item.BirthDate?.ToString("dd/MM/yyyy")</td>
                <td>@item.PhoneNumber</td>
              
                <td>
                    <a class="btn btn-primary" asp-controller="Units" asp-action="MemberUnits" asp-route-id="@item.Id">Units</a>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

