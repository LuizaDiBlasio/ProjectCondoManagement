@model IEnumerable<ClassLibrary.DtoModels.CondoMemberDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        @* Título e Botão de Criação *@
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Condo Members</h4>
                </div>
            </div>
            @if (this.User.IsInRole("CondoManager"))
            {
                <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                    <a class="btn btn-success" asp-action="Create">Create new member</a>
                </div>
            }
        </div>

        @* Conteúdo da Tabela dentro de um Card *@
        <div class="row">
            <div class="col-xl-12 col-xxl-12">
                <div class="card">
                    <div class="card-body">
                        @if (Model == null || !Model.Any())
                        {
                            <p>No condo members found.</p>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Full Name</th>
                                            <th>Email</th>
                                            <th>Phone Number</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <img src="@(item.ImageFullPath)" alt="User Image" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                                                </td>
                                                <td>@item.FullName</td>
                                                <td>@item.Email</td>
                                                <td>@item.PhoneNumber</td>
                                                <td>
                                                    <a class="btn btn-outline-secondary me-2" asp-controller="Units" asp-action="MemberUnits" asp-route-id="@item.Id">Units</a>

                                                    @if (this.User.IsInRole("CondoManager"))
                                                    {
                                                        <a class="btn btn-outline-primary me-2" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                                        <a class="btn btn-outline-danger me-2" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                                    }

                                                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}