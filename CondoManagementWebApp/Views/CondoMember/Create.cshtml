@model ClassLibrary.DtoModels.CondoMemberDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="fix-wrapper">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-md-12">
                <div class="card mb-0 h-auto">
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <a href="@Url.Action("Index", "Home")"><img class="logo-auth" src="~/images/logo-full.png" alt="Logo"></a>
                        </div>
                        <h4 class="text-center mb-4">Create Condo Member</h4>

                        <hr class="mt-4 mb-5" style="border-top: 1px solid #e0e0e0; opacity: 0.8;" />

                        <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>

                        <form asp-action="Create">
                            @Html.AntiForgeryToken()

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label class="form-label" asp-for="FullName"></label>
                                        <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>

                                    <div class="form-group mb-4">
                                        <label class="form-label" asp-for="Email"></label>
                                        <input asp-for="Email" class="form-control" type="email" placeholder="hello@example.com" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-group mb-4">
                                        <label class="form-label" asp-for="Address"></label>
                                        <input asp-for="Address" class="form-control" placeholder="Enter address" />
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label class="form-label" asp-for="BirthDate"></label>
                                        <input type="text" id="birthDateInput" asp-for="BirthDate" class="form-control" placeholder="Select a date" />
                                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                                    </div>

                                    <div class="form-group mb-4">
                                        <label class="form-label" asp-for="PhoneNumber"></label>
                                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mt-3 d-flex justify-content-between align-items-center">
                                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                                <button type="submit" class="btn btn-primary">Create Condo Member</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', function () {
            // Inicializa o DatePicker para BirthDate
            var birthDatePicker = new ej.calendars.DatePicker({
                format: 'MM/dd/yyyy',
                placeholder: 'Select a date',
                max: new Date()
            });
            birthDatePicker.appendTo('#birthDateInput');
        });
    </script>
}