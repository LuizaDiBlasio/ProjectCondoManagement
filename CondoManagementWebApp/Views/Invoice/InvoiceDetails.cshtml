@model CondoManagementWebApp.Models.InvoiceDetailsViewModel

@{
    ViewData["Title"] = "Invoice Details";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Invoice Details</h4>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Invoice Details</a></li>
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-12 col-xxl-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Payment Details</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <h5>Payment Information</h5>
                                <hr />
                                <dl class="row">

                                    <dt class="col-sm-4">
                                        Invoice #
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.Payment.InvoiceId)
                                    </dd>
                                    <dt class="col-sm-4">
                                        Payment method
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.Payment.PaymentMethod)
                                    </dd>
                                    @if (!string.IsNullOrEmpty(Model.Payment.PaymentMethod))
                                    {
                                        <dt class="col-sm-4">
                                            @switch (Model.Payment.PaymentMethod)
                                            {
                                                case "Omah Wallet":
                                                    <span>Payer's Omah Wallet </span>
                                                    break;
                                                case "Credit card":
                                                    <span>Payers credit card </span>
                                                    break;
                                                case "MbWay":
                                                    <span>Payers MbWay </span>
                                                    break;
                                            }
                                        </dt>
                                        <dd class="col-sm-8">
                                            @switch (Model.Payment.PaymentMethod)
                                            {
                                                case "Omah Wallet":
                                                    @Html.DisplayFor(model => model.Payment.PayerFinancialAccountId)
                                                    break;
                                                case "Credit card":
                                                    @Html.DisplayFor(model => model.Payment.CreditCard)
                                                    break;
                                                case "MbWay":
                                                    @Html.DisplayFor(model => model.Payment.MbwayNumber)
                                                    break;
                                            }
                                        </dd>
                                    }
                                    @if (Model.Payment.TransactionDto != null && !string.IsNullOrWhiteSpace(Model.Payment.TransactionDto.ExternalRecipientBankAccount))
                                    {
                                        <dt class="col-sm-4">
                                            <span>Recipient's Bank Account</span>
                                        </dt>
                                        <dd class="col-sm-8">
                                            @Html.DisplayFor(model => model.Payment.TransactionDto.ExternalRecipientBankAccount)
                                        </dd>
                                    }
                                    else
                                    {
                                        <dt class="col-sm-4">
                                            <span>Recipient's Omah Wallet </span>
                                        </dt>
                                        <dd class="col-sm-8">
                                            @Html.DisplayFor(model => model.Payment.TransactionDto.BeneficiaryAccountId)
                                        </dd>
                                    }
                                    <dt class="col-sm-4">
                                        Issue date
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.Payment.IssueDate)
                                    </dd>
                                    <dt class="col-sm-4">
                                        Due date
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.Payment.DueDate)
                                    </dd>
                                    <dt class="col-sm-4">
                                        Payment date
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.PaymentDate)
                                    </dd>
                                    
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-12 col-xxl-12 mt-4">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Associated Expenses</h4>
                </div>
                <div class="card-body">
                    @if (!Model.Payment.ExpensesDto.Any())
                    {
                        <p>No expenses associated with this payment.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Expense Type</th>
                                        <th>Details</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Payment.ExpensesDto)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.ExpenseTypeDto.Name)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Detail)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="mt-4">
           @*  <a asp-action="IndexInvoices" class="btn btn-outline-secondary">Back to List</a> *@
        </div>
    </div>
</div>
