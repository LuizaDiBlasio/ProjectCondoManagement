<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="MobileCondoManagement.Views.CondoMemberDashboardPage"
    Title="Dashboard"
    BackgroundColor="#f4f6fa">

    <ContentPage.Resources>
        <Color x:Key="PrimaryBlue">#1976d2</Color>
        <Color x:Key="LightBlue">#e3f2fd</Color>
        <Color x:Key="CardBg">#FFFFFF</Color>
        <Thickness x:Key="CardMargin">0,6</Thickness>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="18">

            <!-- PERFIL -->
            <Frame CornerRadius="12" Padding="12" BackgroundColor="{StaticResource CardBg}" HasShadow="True" Margin="0,4">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12" VerticalOptions="Center">

                    <!-- Perfil -->
                    <HorizontalStackLayout Grid.Column="0" Spacing="12" VerticalOptions="Center">
                        <Border Stroke="{StaticResource PrimaryBlue}" StrokeThickness="2" StrokeShape="RoundRectangle 40"
                    WidthRequest="72" HeightRequest="72" VerticalOptions="Center" HorizontalOptions="Start">
                            <Image Source="{Binding CondoMember.ImageFullPath}" Aspect="AspectFill" WidthRequest="72" HeightRequest="72"/>
                        </Border>
                        <VerticalStackLayout VerticalOptions="CenterAndExpand">
                            <Label Text="{Binding CondoMember.FullName}" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource PrimaryBlue}"/>
                            <Label Text="{Binding CondoMember.Email}" FontSize="13" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <!-- Logout -->
                    <Button 
                    Grid.Column="1"
                    Text="Logout"
                    Command="{Binding LogoutCommand}"
                    BackgroundColor="Red"
                    TextColor="White"
                    CornerRadius="8"
                    VerticalOptions="Center"
                    HorizontalOptions="End" />
                        </Grid>
            </Frame>

            <!-- UNITS -->
            <Frame CornerRadius="12" Padding="0" BackgroundColor="{StaticResource CardBg}" HasShadow="True" Margin="0,4">
                <toolkit:Expander>
                    <toolkit:Expander.Header>
                        <Grid BackgroundColor="{StaticResource PrimaryBlue}" Padding="12">
                            <Label Text="My Units" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                        </Grid>
                    </toolkit:Expander.Header>
                    <toolkit:Expander.Content>
                        <StackLayout Padding="12" Spacing="8">
                            <CollectionView ItemsSource="{Binding Units}" SelectionMode="None">
                                <CollectionView.EmptyView>
                                    <Label Text="No units found." TextColor="Gray" FontAttributes="Italic" HorizontalOptions="Center"/>
                                </CollectionView.EmptyView>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame BackgroundColor="{StaticResource LightBlue}" CornerRadius="10" Padding="10" Margin="{StaticResource CardMargin}">
                                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="4">
                                                <Label Text="Condo:" FontAttributes="Bold"/>
                                                <Label Text="{Binding CondominiumDto.CondoName}" Grid.Column="1"/>

                                                <Label Text="Door:" FontAttributes="Bold" Grid.Row="1"/>
                                                <Label Text="{Binding Door}" Grid.Column="1" Grid.Row="1"/>

                                                <Label Text="Floor:" FontAttributes="Bold" Grid.Row="2"/>
                                                <Label Text="{Binding Floor}" Grid.Column="1" Grid.Row="2"/>

                                                <Label Text="Bedrooms:" FontAttributes="Bold" Grid.Row="3"/>
                                                <Label Text="{Binding Bedrooms}" Grid.Column="1" Grid.Row="3"/>
                                            </Grid>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                    </toolkit:Expander.Content>
                </toolkit:Expander>
            </Frame>

            <!-- MESSAGES -->
            <Frame CornerRadius="12" Padding="0" BackgroundColor="{StaticResource CardBg}" HasShadow="True" Margin="0,4">
                <toolkit:Expander>
                    <toolkit:Expander.Header>
                        <Grid BackgroundColor="{StaticResource PrimaryBlue}" Padding="12">
                            <Label Text="Recent Messages" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                        </Grid>
                    </toolkit:Expander.Header>
                    <toolkit:Expander.Content>
                        <StackLayout Padding="12" Spacing="8">
                            <CollectionView ItemsSource="{Binding Messages}" SelectionMode="None">
                                <CollectionView.EmptyView>
                                    <Label Text="No messages found." TextColor="Gray" FontAttributes="Italic" HorizontalOptions="Center"/>
                                </CollectionView.EmptyView>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame BackgroundColor="{StaticResource LightBlue}" CornerRadius="10" Padding="10" Margin="{StaticResource CardMargin}">
                                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="4">
                                                <Label Text="Title:" FontAttributes="Bold"/>
                                                <Label Text="{Binding MessageTitle}" Grid.Column="1"/>

                                                <Label Text="Content:" FontAttributes="Bold" Grid.Row="1"/>
                                                <Label Text="{Binding MessageContent}" Grid.Column="1" Grid.Row="1"/>

                                                <Label Text="Date:" FontAttributes="Bold" Grid.Row="2"/>
                                                <Label Text="{Binding PostingDate, StringFormat='{0:dd/MM/yyyy}'}" Grid.Column="1" Grid.Row="2"/>

                                                <Label Text="From:" FontAttributes="Bold" Grid.Row="3"/>
                                                <Label Text="{Binding SenderEmail}" Grid.Column="1" Grid.Row="3"/>
                                            </Grid>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                    </toolkit:Expander.Content>
                </toolkit:Expander>
            </Frame>

            <!-- MEETINGS -->
            <Frame CornerRadius="12" Padding="0" BackgroundColor="{StaticResource CardBg}" HasShadow="True" Margin="0,4">
                <toolkit:Expander>
                    <toolkit:Expander.Header>
                        <Grid BackgroundColor="{StaticResource PrimaryBlue}" Padding="12">
                            <Label Text="Upcoming Meetings" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                        </Grid>
                    </toolkit:Expander.Header>
                    <toolkit:Expander.Content>
                        <StackLayout Padding="12" Spacing="8">
                            <CollectionView ItemsSource="{Binding Meetings}" SelectionMode="None">
                                <CollectionView.EmptyView>
                                    <Label Text="No meetings scheduled." TextColor="Gray" FontAttributes="Italic" HorizontalOptions="Center"/>
                                </CollectionView.EmptyView>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame BackgroundColor="{StaticResource LightBlue}" CornerRadius="10" Padding="10" Margin="{StaticResource CardMargin}">
                                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="4">
                                                <Label Text="Title:" FontAttributes="Bold"/>
                                                <Label Text="{Binding Title}" Grid.Column="1"/>

                                                <Label Text="Date:" FontAttributes="Bold" Grid.Row="1"/>
                                                <Label Text="{Binding DateAndTime, StringFormat='{0:dd/MM/yyyy HH:mm}'}" Grid.Column="1" Grid.Row="1"/>

                                                <Label Text="Description:" FontAttributes="Bold" Grid.Row="2"/>
                                                <Label Text="{Binding Description}" Grid.Column="1" Grid.Row="2"/>

                                                <Label Text="{Binding MeetingLink}" 
                                                  TextColor="Blue" 
                                                  FontAttributes="Italic"
                                                  LineBreakMode="CharacterWrap">
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding OpenUrlCommand}" 
                                                        CommandParameter="{Binding MeetingLink}"/>
                                                    </Label.GestureRecognizers>
                                                </Label>
                                            </Grid>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                    </toolkit:Expander.Content>
                </toolkit:Expander>
            </Frame>

            <!-- FINANCIAL ACCOUNT -->
            <Frame CornerRadius="12" Padding="0" BackgroundColor="{StaticResource CardBg}" HasShadow="True" Margin="0,4">
                <toolkit:Expander>
                    <toolkit:Expander.Header>
                        <Grid BackgroundColor="{StaticResource PrimaryBlue}" Padding="12">
                            <Label Text="Financial Account" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                        </Grid>
                    </toolkit:Expander.Header>
                    <toolkit:Expander.Content>
                        <StackLayout Padding="12" Spacing="8">
                            <Label Text="Your account is not active" TextColor="Red" FontAttributes="Bold" HorizontalOptions="Center">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding FinancialAccount.IsActive}" Value="True">
                                        <Setter Property="IsVisible" Value="False"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>

                            <Grid ColumnDefinitions="Auto,*"
                                  RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                                  RowSpacing="6">
                                <Label Text="Owner:" FontAttributes="Bold"/>
                                <Label Text="{Binding FinancialAccount.OwnerName}" Grid.Column="1"/>

                                <Label Text="Bank:" FontAttributes="Bold" Grid.Row="1"/>
                                <Label Text="{Binding FinancialAccount.BankName}" Grid.Column="1" Grid.Row="1"/>

                                <Label Text="Account:" FontAttributes="Bold" Grid.Row="2"/>
                                <Label Text="{Binding FinancialAccount.AssociatedBankAccount}" Grid.Column="1" Grid.Row="2"/>

                                <Label Text="Card:" FontAttributes="Bold" Grid.Row="3"/>
                                <Label Text="{Binding FinancialAccount.CardNumber}" Grid.Column="1" Grid.Row="3"/>

                                <Label Text="Balance:" FontAttributes="Bold" Grid.Row="4"/>
                                <Label Text="{Binding FinancialAccount.Balance, StringFormat='{0:C}'}" Grid.Column="1" Grid.Row="4"/>

                                <Grid.Triggers>
                                    <DataTrigger TargetType="Grid" Binding="{Binding FinancialAccount.IsActive}" Value="False">
                                        <Setter Property="IsVisible" Value="False"/>
                                    </DataTrigger>
                                </Grid.Triggers>
                            </Grid>
                        </StackLayout>
                    </toolkit:Expander.Content>
                </toolkit:Expander>
            </Frame>

            <!-- PAYMENTS -->
            <Frame CornerRadius="12" Padding="0" BackgroundColor="{StaticResource CardBg}" HasShadow="True" Margin="0,4">
                <toolkit:Expander>
                    <toolkit:Expander.Header>
                        <Grid BackgroundColor="{StaticResource PrimaryBlue}" Padding="12">
                            <Label Text="Pending Payments" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                        </Grid>
                    </toolkit:Expander.Header>
                    <toolkit:Expander.Content>
                        <StackLayout Padding="12" Spacing="8">
                            <CollectionView ItemsSource="{Binding Payments}" SelectionMode="None">
                                <CollectionView.EmptyView>
                                    <Label Text="No pending payments." TextColor="Gray" FontAttributes="Italic" HorizontalOptions="Center"/>
                                </CollectionView.EmptyView>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame BackgroundColor="{StaticResource LightBlue}" CornerRadius="10" Padding="10" Margin="{StaticResource CardMargin}">
                                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="4">
                                                <Label Text="Due Date:" FontAttributes="Bold"/>
                                                <Label Text="{Binding DueDate, StringFormat='{0:dd/MM/yyyy}'}" Grid.Column="1"/>

                                                <Label Text="Amount:" FontAttributes="Bold" Grid.Row="1"/>
                                                <Label Text="{Binding Amount, StringFormat='{0:C}'}" Grid.Column="1" Grid.Row="1" TextColor="Green"/>

                                                <Label Text="Recipient:" FontAttributes="Bold" Grid.Row="2"/>
                                                <Label Text="{Binding Recipient}" Grid.Column="1" Grid.Row="2"/>
                                            </Grid>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                    </toolkit:Expander.Content>
                </toolkit:Expander>
            </Frame>

            <!-- OCCURRENCES -->
            <Frame CornerRadius="12" Padding="0" BackgroundColor="{StaticResource CardBg}" HasShadow="True" Margin="0,4">
                <toolkit:Expander>
                    <toolkit:Expander.Header>
                        <Grid BackgroundColor="{StaticResource PrimaryBlue}" Padding="12">
                            <Label Text="My Occurrences" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                        </Grid>
                    </toolkit:Expander.Header>
                    <toolkit:Expander.Content>
                        <StackLayout Padding="12" Spacing="8">
                            <CollectionView ItemsSource="{Binding Occurrences}" SelectionMode="None">
                                <CollectionView.EmptyView>
                                    <Label Text="No occurrences found." TextColor="Gray" FontAttributes="Italic" HorizontalOptions="Center"/>
                                </CollectionView.EmptyView>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame BackgroundColor="{StaticResource LightBlue}" CornerRadius="10" Padding="10" Margin="{StaticResource CardMargin}">
                                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="4">
                                                <Label Text="Subject:" FontAttributes="Bold"/>
                                                <Label Text="{Binding Subject}" Grid.Column="1" TextColor="Red"/>

                                                <Label Text="Details:" FontAttributes="Bold" Grid.Row="1"/>
                                                <Label Text="{Binding Details}" Grid.Column="1" Grid.Row="1"/>

                                                <Label Text="Date:" FontAttributes="Bold" Grid.Row="2"/>
                                                <Label Text="{Binding DateAndTime, StringFormat='{0:dd/MM/yyyy HH:mm}'}" Grid.Column="1" Grid.Row="2"/>
                                            </Grid>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                    </toolkit:Expander.Content>
                </toolkit:Expander>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
