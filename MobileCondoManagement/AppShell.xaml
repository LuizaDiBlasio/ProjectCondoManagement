<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobileCondoManagement.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MobileCondoManagement"
    xmlns:views="clr-namespace:MobileCondoManagement.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <!-- Login Page-->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />


    <!-- Condo Member Dashboard-->
    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate views:CondoMemberDashboardPage}"
        Route="CondoMemberDashboardPage" />


    <!-- Condo Manager Dashboard-->
    <ShellContent
        Title="Condo Manager Dashboard"
        Route="CondoManagerDashboardPage"
        ContentTemplate="{DataTemplate views:CondoManagerDashboardPage}" />


    <!-- Company Admin Dashboard -->
    <ShellContent
        Title="Company Admin Dashboard"
        Route="CompanyAdminDashboardPage"
        ContentTemplate="{DataTemplate views:CompanyAdminDashboardPage}" />

    <!--SysAdmin Dashboard-->
    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate views:SysAdminDashboardPage}"
        Route="CondoMemberDashboardPage" />


</Shell>

